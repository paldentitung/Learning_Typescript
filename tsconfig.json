{
  "compilerOptions": {
    // Input / Output
    "rootDir": "./src",          // Where your TS files are
    "outDir": "./dist",          // Where JS will go

    // Environment
    "module": "commonjs",        // Node-friendly
    "target": "ES6",             // Modern JS
    "esModuleInterop": true,     // For default imports

    // Typechecking
    "strict": true,              // Catch more errors
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    
  }
}